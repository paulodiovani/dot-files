# use ctrl key as cmd for raycast f* keybindings
ctrl - f1 : skhd -k "cmd - f1"
ctrl - f2 : skhd -k "cmd - f2"
ctrl - f3 : skhd -k "cmd - f3"
ctrl - f4 : skhd -k "cmd - f4"

# use ctrl key as cmd for common actions
ctrl - a [
  * : skhd -k "cmd - a"
  "kitty" ~
  "terminal" ~
]

ctrl - c [
  * : skhd -k "cmd - c"
  "kitty" ~
  "terminal" ~
]

ctrl - f [
  * : skhd -k "cmd - f"
  "kitty" ~
  "terminal" ~
]

