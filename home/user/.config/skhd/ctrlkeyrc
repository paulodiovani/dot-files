  * : skhd -k "cmd - k"
  "kitty" ~
  "terminal" ~
]

ctrl - l [
  * : skhd -k "cmd - l"
  "kitty" ~
  "terminal" ~
]

ctrl - n [
  * : skhd -k "cmd - n"
  "kitty" ~
  "terminal" ~
]

ctrl - r [
  * : skhd -k "cmd - r"
  "kitty" ~
  "terminal" ~
]

ctrl - t [
  * : skhd -k "cmd - t"
  "kitty" ~
  "terminal" ~
]

shift + ctrl - t [
  * : skhd -k "shift + cmd - t"
  "kitty" ~
  "terminal" ~
]

